{
    "manifest_version": 2,
    "name": "BUPT campus area network traffic monitoring",
    "description": "Monitor the campus area network traffic, show current network flow, and auto log off when exceeded",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true 
    },

    "permissions": [
        "activeTab",
        "alarms",
        "webRequest",
        "webRequestBlocking",
        "http://*/*"
    ]
}
