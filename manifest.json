{
    "manifest_version": 2,
    "name": "BUPT Network Monitor",
    "description": "Monitor the campus area network traffic, show current network flow, and auto log off when exceeded",
    "version": "1.0",

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "browser_action": {
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js", "md5.js"],
        "persistent": true 
    },

    "permissions": [
        "activeTab",
        "alarms",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/*"
    ]
}
